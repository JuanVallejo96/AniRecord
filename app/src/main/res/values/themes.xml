<resources>
    <!-- Base application theme. -->
    <style name="Theme.AniRecord" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="Theme.AniRecord.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AniRecord.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.AniRecord.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/border_radius</item>
    </style>

    <style name="circularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>